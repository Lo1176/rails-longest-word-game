<h1>New Game</h1>

<ul class="list-group list-group-horizontal letter-box">
  <% @letters.each do |letter| %>
    <li class="list-group-item"><%= letter %></li>
  <% end %>
</ul>
  <p class="mt-3">What is the longest word you can find?</p>
<form class="form-inline" action="/score" method="post">
  <input type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="Enter your word" name="word">
  <button type="submit" class="form-control mb-2 mr-sm-2">Play!</button>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>

</form>
